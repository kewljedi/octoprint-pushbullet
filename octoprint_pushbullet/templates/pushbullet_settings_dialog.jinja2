<div id="settings_plugin_pushbullet_dialog" data-bind="allowBindings: true">

    <h2>{{ _('Configuration') }}</h2>

    <form class="form-horizontal">
        <div class="control-group">
            <label class="control-label" for="settings-pushbullet-authtoken">{{ _('API Token') }}</label>
            <div class="controls">
                <input type="text" class="input-block-level" data-bind="value: settings.plugins.pushbullet.authtoken" id="settings-pushbullet-authtoken">
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="settings-pushbullet-channeltag">{{ _('Channel Tag') }}</label>
            <div class="controls">
                <input type="text" class="input-block-level" data-bind="value: settings.plugins.pushbullet.channeltag" id="settings-pushbullet-channeltag">
            </div>
        </div>
    </form>
</div>